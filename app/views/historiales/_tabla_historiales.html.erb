<%= form_with(url: historiales_pacientes_path, method: :get, local: true) do |f| %>
  <%= f.text_field :search %>
  <%= f.submit :Buscar %>
<% end %>

<table class="table table-bordered table-condensed table-striped table-hover">
  <thead class="thead-dark">
  <tr>
    <% headers.each do |header| %>
      <th scope="col"><%= header %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <%= render partial: 'fila_historial', collection: collection, as: :paciente, locals: { attributes: row_attrs } %>
  </tbody>
</table>

<script>
    $(document).ready(function($) {
        $(".table-row").click(function() {
            window.document.location = $(this).data("href");
        });
    });
</script>