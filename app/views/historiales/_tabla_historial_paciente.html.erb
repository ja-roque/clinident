<%= form_with(url: historial_paciente_email_path, method: :post) do |f| %>
  <%= f.hidden_field :citas_id, value: @citas.pluck(:id) %>
  <%= button_tag(type: 'submit', class: "btn btn-success") do %>
    Enviar CSV <%= fa_icon 'envelope-open-text' %>
  <% end %>
<% end %>

<table class="table table-bordered table-condensed table-striped table-hover">
  <thead class="thead-dark">
  <tr>
    <% headers.each do |header| %>
      <th scope="col"><%= header %></th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <%= render partial: 'fila_historial_paciente', collection: @citas, as: :cita %>
  </tbody>
</table>

